class Solution {
    public int maxSatisfied(int[] customers, int[] grumpy, int X) {
        if (customers.length == 0) {
            return 0;
        }
        int notGrumpy = 0, grumpyMax = 0;
        for (int i = 0; i < customers.length; i++) {
            if (grumpy[i] == 0) {
                notGrumpy += customers[i];
            }
            int grumpyTotal = 0;
            for (int j = i; j < Math.min(i + X, customers.length); j++) {
                if (grumpy[j] == 1) {
                    grumpyTotal += customers[j];
                }
            }
            grumpyMax = Math.max(grumpyTotal, grumpyMax);
        }
        return notGrumpy + grumpyMax;
    }
}
