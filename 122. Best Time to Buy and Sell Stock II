class Solution {
    public int maxProfit(int[] prices) {
        if(prices.length <= 1) return 0;
        int total = 0, buy = prices[0];        
        for(int i = 1; i < prices.length; i++){
            if(prices[i] > buy){
                total += prices[i] - buy;
            }
            buy = prices[i];
        }
        return total;
    }
}
