class Solution {
    public boolean isPalindrome(String s) {
        if(s.length() <= 1) return true;
        String newS = s.toLowerCase();
        int i = 0, j = s.length() - 1;
        while(i <= j){
            if(!Character.isLetterOrDigit(newS.charAt(i))){
                i++;
            }
            if(!Character.isLetterOrDigit(newS.charAt(j))){
                j--;
            }
            if(Character.isLetterOrDigit(newS.charAt(i)) && Character.isLetterOrDigit(newS.charAt(j))){
                if(newS.charAt(i) == newS.charAt(j)){
                    i++;
                    j--;
                } else {
                    return false;
                }
            }
        }
        return true;
    }
}
