class Solution {
    public int smallestDivisor(int[] nums, int threshold) {
        int n = nums.length;
        int low = 1, high = 1, mid = 0;
        for (int i = 0; i < n; i++) {
            high = Math.max(high, nums[i]);
        }
        while (low < high) {
            mid = (low + high) / 2;
            int sum = 0;
            for (int i = 0; i < n; i++) {
                sum += nums[i] / mid + (nums[i] % mid == 0? 0: 1);
            }
            if(sum > threshold) {
                low = mid + 1;
            } else {
                high = mid;
            }            
        }
        return high;
    }
}
