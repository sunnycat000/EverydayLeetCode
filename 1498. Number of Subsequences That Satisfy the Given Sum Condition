class Solution {
    public int numSubseq(int[] nums, int target) {
        int n = nums.length, modulo = (int) (Math.pow(10, 9) + 7);
        int cnt = 0;          
        if (n == 0) {
            return 0;
        } 
        if (n == 1 && nums[0] * 2 <= target) {
            return 1;
        }
        int[] pow = new int[n];
        pow[0] = 1;
            for (int i = 1; i < n; i++){
            pow[i] = (pow[i - 1] * 2) % modulo; 
        }
        Arrays.sort(nums);
        int i = 0, j = n - 1;
        while (j >= i) {
            if(nums[j] + nums[i] >target) {
                j--;
            } else {
               cnt = (cnt + pow[j - i]) % modulo; 
                i++;
            }            
        }        
        return cnt;
    }
}
