class Solution {
    public int findLengthOfShortestSubarray(int[] arr) {
        int n = arr.length;
        if (n <= 1) {
            return 0;
        }
        int j = n - 1, result = n - 1;
        while(j - 1 >= 0 && arr[j - 1] <= arr[j]) {
            j--;
        }
        result = Math.min(j, result);
        if (result == 0) {
            return 0;
        }
        for (int i = 0; i < n; i++) {
            if (i - 1 >= 0 && arr[i] < arr[i - 1]) {
                break;
            }
            while (j < n && arr[i] > arr[j]) {
                j++;
            }
            result = Math.min(result, j - i - 1);
        }
        return result;
    }
}
