class Solution {
    public int splitArray(int[] nums, int m) {
        int low = 0, high = 0, n = nums.length;
        if (n == 0) {return 0;}
        for (int i = 0; i < n; i++) {
            low = Math.max(low, nums[i]);
            high += nums[i];
        }
        int mid = nums[0], seg = 0;
        while (low < high) {
            mid = (low + high) / 2;
            if (minGroup(nums, mid) > m) {
                low = mid + 1;
            } else {
                high = mid;
            } 
        }
        return low;
    }
    private int minGroup(int[] nums, int limit) {
        int subtotal = 0, seg = 1;
        for (int i = 0; i < nums.length; i++){
            if (subtotal + nums[i] > limit) {
                ++seg;
                subtotal = nums[i];
            } else {
                subtotal += nums[i];
            }
        }
        return seg;
    }
}
