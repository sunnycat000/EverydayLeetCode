class Solution {
    public boolean canPartition(int[] nums) {
        int sum = 0, n = nums.length;
        for(int x: nums) {
            sum += x;
        }
        if (sum % 2 != 0) {
            return false;
        }
        int target = sum >>= 1;
        boolean[] dp = new boolean[target + 1];//dp[i] = if the sum can be i
        dp[0] = true;
        for (int x: nums){
            for (int i = target; i >= x; i--){
                dp[i] = dp[i] || dp[i - x];  
            }            
        }
        return dp[target];
    }
}
