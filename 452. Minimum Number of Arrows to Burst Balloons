class Solution {
    public int findMinArrowShots(int[][] points) {
        if (points.length == 0) {
            return 0;
        }
        Arrays.sort(points, (a, b) -> a[1] == b[1]? Integer.compare(-a[0], -b[0]): Integer.compare(a[1], b[1]));
        int cnt = 1, i = 1, end = points[0][1];
        while (i < points.length) {
            if (points[i][0] <= end ) {
                i++;
            } else {
                end = points[i][1];
                cnt++;
            }
        }
        return cnt;
    }
}
