class Solution {
    public int myAtoi(String s) {
        if(s.length() == 0 || s == null) {return 0;}
        int num = 0, sign = 1;
        boolean hasSign = false, hasDigit = false;
        for(char c: s.toCharArray()){
            if(!hasDigit && !hasSign && c == ' ') {
                continue;
            } else if (!hasSign && !hasDigit && (c == '+' || c =='-')){
                sign = c == '+'? 1: -1;
                hasSign = true;
            } else if(c >= '0' && c <= '9'){
                if(num > Integer.MAX_VALUE / 10 || num == Integer.MAX_VALUE / 10 && c - '7' > 0){
                    return sign == 1? Integer.MAX_VALUE: Integer.MIN_VALUE;
                }
                num = num * 10 + (c - '0');
                hasDigit = true;
            } else {
                break;
            }            
        }
        
        return num * sign;
    }
}
